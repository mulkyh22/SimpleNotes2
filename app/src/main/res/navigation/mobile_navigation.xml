<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.app.simplenotes2.ui.about.FragmentAbout"
        android:label="About"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.app.simplenotes2.NoteFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_note" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.app.simplenotes2.ui.profile.FragmentProfile"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_login_dest"
        android:name="com.app.simplenotes2.LoginActivity"
        android:label="Log In"
        tools:layout="@layout/activity_login" />
</navigation>